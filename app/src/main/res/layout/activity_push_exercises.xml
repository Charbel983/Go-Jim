<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pushExercisesLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PushExercisesActivity">

    <ImageView
        android:id="@+id/darkenImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#70000000"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/pushBackToWorkoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_done_outline_24" />

    <TextView
        android:id="@+id/pushExercisesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Push Exercises"
        android:textAlignment="center"
        android:textColor="#8BC34A"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pushExercisesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="70dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pushExercisesSpinner" />

    <Spinner
        android:id="@+id/pushExercisesSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toStartOf="@+id/pushExercisesSearchImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pushExercisesTitle" />

    <Switch
        android:id="@+id/pushExercisesSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Show Thumbnails"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pushExercisesTitle" />

    <ImageView
        android:id="@+id/pushExercisesSearchImageView"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/pushExercisesRecyclerView"
        app:layout_constraintEnd_toStartOf="@+id/pushExercisesSearchEditText"
        app:layout_constraintTop_toBottomOf="@+id/pushExercisesTitle"
        app:srcCompat="@android:drawable/ic_menu_search" />

    <EditText
        android:id="@+id/pushExercisesSearchEditText"
        android:layout_width="85dp"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="Search"
        android:inputType="textPersonName"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/pushExercisesRecyclerView"
        app:layout_constraintEnd_toStartOf="@+id/pushExercisesSwitch"
        app:layout_constraintTop_toBottomOf="@+id/pushExercisesTitle" />

    <com.google.android.gms.ads.admanager.AdManagerAdView
        android:id="@+id/adView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-7793029180445743/7493290093"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pushExercisesRecyclerView">

    </com.google.android.gms.ads.admanager.AdManagerAdView>

</androidx.constraintlayout.widget.ConstraintLayout>
